<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_icon_place"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignBottom="@+id/tv_distance"
                android:layout_toLeftOf="@+id/tv_distance"
                android:layout_toStartOf="@+id/tv_distance"
                android:background="@drawable/ic_place"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000 km"
                android:width="100dp"
                android:singleLine="true"
                android:layout_alignTop="@+id/iv_photo"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/ic_menu_gallery"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="place name "
                android:textSize="16sp"
                android:layout_below="@+id/iv_icon_place"
                android:layout_toRightOf="@+id/iv_photo"
                android:layout_toEndOf="@+id/iv_photo"
                android:layout_marginLeft="6dp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="adressss asd asd asd as dasd  "
                android:textSize="16sp"
                android:layout_below="@+id/tv_title"
                android:layout_alignLeft="@+id/tv_title"
                android:layout_alignStart="@+id/tv_title" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>